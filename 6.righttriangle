import java.util.Scanner;
public class righttriangle
{
public static void main(String[]args)
{
 Scanner input=new Scanner(System.in);
 System.out.print("enter a number:");
 int n=input.nextInt();
 int i,j,k;
 for(i=1;i<=n;i++){
  for(j=0;j<=n-i;j++)
 {
  System.out.print(" ");
 }
  for(k=1;k<=i;k++)
  {
   System.out.print("*");
  }  
   System.out.println();
 }
}
}

 int n=input.nextInt();
 int i,j,k;
 for(i=0;i<=n;i++)
 {
  int a=1;
 for(j=1;j<=n-i;j++)
 {
  System.out.print(" ");
 }
 for(k=1;k<=i;k++)
 {
  System.out.print(a+" ");
  a=a*(i-k)/k;
 }
  System.out.println();
}
}
}
